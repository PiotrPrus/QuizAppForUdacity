<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_page_1"
        android:layout_width="333dp"
        android:layout_height="200dp"
        android:src="@drawable/inception_leonardo_image"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:onClick="goToPageTwo"
        android:text="@string/button_text_next"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="252dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="252dp"
        android:layout_marginEnd="252dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/type_the_title"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="364dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_page_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/type_title_edit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_text_hint"
        android:inputType="text|textCapCharacters"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="364dp"
        tools:layout_editor_absoluteY="135dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_page_1"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginEnd="62dp"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>