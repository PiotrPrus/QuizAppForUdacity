<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_page_1"
        android:layout_width="333dp"
        android:layout_height="200dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/dark_knight_joker_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="43dp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="392dp"
        tools:layout_editor_absoluteY="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_page_1"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="111dp">

        <RadioGroup
            android:id="@+id/radio_group1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_1"
                style="@style/RadioButtonCustomStyle"
                android:text="@string/movie_1_batman" />

            <RadioButton
                android:id="@+id/radio_button_2"
                style="@style/RadioButtonCustomStyle"
                android:text="@string/movie_2_batman_returns" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radio_group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_3"
                style="@style/RadioButtonCustomStyle"
                android:text="@string/movie_3_batman_begins" />

            <RadioButton
                android:id="@+id/radio_button_4"
                style="@style/RadioButtonCustomStyle"
                android:text="@string/movie_4_dark_knight" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:onClick="goToResults"
        android:text="@string/button_text_next"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="252dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="252dp"
        android:layout_marginEnd="252dp"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>