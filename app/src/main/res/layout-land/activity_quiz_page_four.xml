<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_page_1"
        android:layout_width="333dp"
        android:layout_height="200dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/star_wars_5th_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="43dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_page_1"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="92dp"
        app:layout_constraintHorizontal_bias="0.0">

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/CheckBoxCustomStyle"
            android:text="@string/mark_hamill" />

        <CheckBox
            android:id="@+id/checkBox2"
            style="@style/CheckBoxCustomStyle"
            android:text="@string/harrison_ford" />

        <CheckBox
            android:id="@+id/checkBox3"
            style="@style/CheckBoxCustomStyle"
            android:text="@string/carrie_fisher" />

        <CheckBox
            android:id="@+id/checkBox4"
            style="@style/CheckBoxCustomStyle"
            android:text="@string/david_prowse" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:onClick="goToPageFifth"
        android:text="@string/button_text_next"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="252dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="252dp"
        android:layout_marginEnd="252dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which actors play in this scene?"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="365dp"
        tools:layout_editor_absoluteY="26dp" />

</android.support.constraint.ConstraintLayout>